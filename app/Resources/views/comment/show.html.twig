{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comment</h1>

    <div class="panel panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">
                <h4><a class="titleLink">
                        {{ comment.comment}}
                </h4></h3>
        </div>
        <div class="panel-footer ">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-left">Author: {{ comment.author }}</h5>
                </div>

                <div class="col-md-6">
                    <div class="text-right">
                        <span>Date of submition: {{ comment.commentDate|date('Y-m-d H:i') }}</span>
                        {#<a type="button" class="btn btn-warning" class="btn btn-primary btn-xs" href="{{ path('advert_edit', {'id':comment.id}) }}">Edit</a>#}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('comment_new', {'id' : comment.id }) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('comment_edit', { 'id': comment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
